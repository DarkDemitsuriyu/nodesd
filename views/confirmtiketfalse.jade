extends ./layout/clientLayout
block content
  .card
    .card-body
      .row
        .col-md-6.col-md-offset-3
          - if(commentSend)
            'Ваш комментарий отправлен!'
          - else
            form#comment-form(name="login-form",method="post")
              .row
                .col-md-6.col-md-offset-3
                  input(type='hidden',name='id',value=tiket)
                  textarea#comment.form-control.floating-label(name='comment',placeholder=title,required='true')
                  .row
                    .col-md-8.col-md-offset-4
                      button.btn.btn-primary.btn-raised(type="submit")=button